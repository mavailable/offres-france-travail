{
  "name": "ft-offres-sheets",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node ./build.mjs",
    "watch": "node ./build.mjs --watch",

    "use:dev": "cp .clasp.dev.json .clasp.json",
    "use:prod": "cp .clasp.prod.json .clasp.json",

    "push:dev": "npm run build && npm run use:dev && clasp push",
    "push:prod": "npm run build && npm run use:prod && clasp push",

    "push": "npm run push:dev",
    "pull": "clasp pull",
    "open": "clasp open",
    "login": "clasp login"
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.83",
    "typescript": "^5.6.3",
    "@google/clasp": "^2.4.2",
    "esbuild": "^0.25.0"
  }
}